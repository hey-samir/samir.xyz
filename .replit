modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 8080
externalPort = 8080

[env]
DATABASE_URL = "$DATABASE_URL"

[commands]
start = "npx next dev"

[deployment]
deploymentTarget = "cloudrun"
build = ["npx next build"]
run = ["sh", "-c", "./start-nextjs.sh"]

[run]
run = "./start-nextjs.sh"

[[ports]]
localPort = 3000
externalPort = 3000
