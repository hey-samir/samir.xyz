modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 8080
externalPort = 8080

[env]
DATABASE_URL = "$DATABASE_URL"

[commands]
start = "npx next dev"

[deployment]
deploymentTarget = "static"
publicDir = "out"
build = ["npx next build"]

[run]
run = "npx next dev -p 3000 -H 0.0.0.0"

[[ports]]
localPort = 3000
externalPort = 3000
