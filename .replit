modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[env]
DATABASE_URL = "$DATABASE_URL"

[commands]
start = "npx next dev"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npx prisma generate && npx next build"]
run = ["sh", "-c", "npx next start -p 3000 --hostname 0.0.0.0"]

[run]
run = "node index.js"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 32209712
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/utils/start-app.sh"
